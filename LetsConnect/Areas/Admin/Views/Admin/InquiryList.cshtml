@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/Service/LcService.js" type="text/javascript"></script>
<script src="~/Scripts/Validations/Common/CommonValidation.js"></script>
<script src="~/Scripts/Controller/Inquiry/InquiryController.js"></script>

<div class="right_col" role="main" ng-controller="InquiryController as ic " ng-cloak>

    <div class="row tile_count">
        <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Inquiries</span>
            <div class="count">{{ic.totalCount}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>100% </i> Over all Inquiries</span>
        </div>

        @*<div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-clock-o"></i>Total Read</span>
            <div class="count">{{ic.readdatacount}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i></i> From last Week</span>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Unread</span>
            <div class="count green">{{ic.unreaddatacount}}</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i> </i> From last Week</span>
        </div>*@
    </div>

    <div id="content-page">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="alert alert-success alert-dismissible fade in" role="alert" id="isSuccessMsg">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <label id="SuccessMsg"></label>
                </div>
                <div class="alert alert-danger alert-dismissible fade in" role="alert" id="isErrorMsg">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <label id="ErrorMsg"></label>
                </div>
            </div>
        </div>

        <div id="List">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Inquiry List</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer" style="margin-top:5%;">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">
                                            <thead>
                                                <tr role="row">

                                                    <th class="sorting_asc" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 69px;" aria-sort="ascending" aria-label="First name: activate to sort column descending">ID</th>
                                                    <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 152px;" aria-label="Position: activate to sort column ascending">Name</th>
                                                    <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 26px;" aria-label="Age: activate to sort column ascending">Mobile</th>
                                                    <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 67px;" aria-label="Last name: activate to sort column ascending">Email</th>
                                                    <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 67px;" aria-label="Last name: activate to sort column ascending">Address</th>
                                                    <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 67px;" aria-label="Last name: activate to sort column ascending">Message</th>
                                                    @*<th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 146px;" aria-label="E-mail: activate to sort column ascending">Actions</th>*@
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <tr role="row" class="odd" ng-repeat="c in ic.InquiryList">
                                                    <td> <span class="fa fa-user" ng-if="c.Isread == false"></span> {{c.InquiryID}}</td>
                                                    <td ng-class="{Bold_not_read : c.Isread== 'false'|| c.Isread == false}">
                                                        {{c.Name}}
                                                    </td>
                                                    <td>
                                                        {{c.Mobile}}
                                                    </td>
                                                    <td class="project_progress">
                                                        {{c.Email}}
                                                    </td>
                                                    <td>
                                                        {{c.Address}}
                                                    </td>
                                                    <td>
                                                        {{c.Message}}
                                                    </td>
                                                    @*<td>
                                                        <a ng-click="ic.ShowInquiry(c.InquiryID)" href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                                    </td>*@
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loading">
        <div class="col-md-12 col-sm-12 col-xs-12 text-center">
            <img src="~/Content/Template/Images/loading_128.gif" class="margin-top-17p" />
        </div>

    </div>
</div>



