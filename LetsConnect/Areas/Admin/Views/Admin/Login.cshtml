<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap -->
    <link href="~/Content/Template/Css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/Template/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/Template/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/Template/vendors/animate.css/animate.min.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="~/Content/Template/Css/custom.min.css" rel="stylesheet" />
    <link href="~/Content/Template/Css/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/Template/Css/blue.css" rel="stylesheet" />

    @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
    <script src="~/Content/Template/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/Template/Js/bootstrap.min.js"></script>
