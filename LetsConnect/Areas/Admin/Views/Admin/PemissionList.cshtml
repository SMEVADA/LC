
@{
    ViewBag.Title = "PemissionList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/Service/LcService.js"></script>
<script src="~/Scripts/Validations/Common/CommonValidation.js"></script>
<script src="~/Scripts/Controller/Administrator/PermissionController.js"></script>

<div class="right_col" role="main" ng-controller="PermissionController" ng-model="Permission" ng-cloak>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="alert alert-success alert-dismissible fade in" role="alert" id="isSuccessMsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <label id="SuccessMsg"></label>
            </div>

            <div class="alert alert-danger alert-dismissible fade in" role="alert" id="isErrorMsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <label id="ErrorMsg"></label>
            </div>


        </div>
    </div>

    <div id="content-page">
        <div id="List">
            <div class="page-title">
                <div class="title_left">
                    <h3>SuperAdmin  <small> - Permission</small></h3>
                </div>
            </div>

            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">


                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Permission List</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">

                            <div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <div class="col-sm-12 text-center">
                                    <div id="divPermission">
                                        <div class="">
                                            <select id="Admin" class="form-control" ng-model="selectedAdmin" ng-options="admin.administratorId as admin.fullName for admin in AdminList" ng-change="GetAllPermissionsByAdminId(selectedAdmin)" @*ng-init="selectedAdmin=selectedValue"*@ ng-selected="selectedAdmin=selectedValue">
                                                <option value="">    Please Select Admin..      </option>
                                                @*  <option value="{{admin.administratorId}}" ng-repeat="admin in AdminList">{{admin.fullName}}</option>*@
                                            </select>

                                        </div>
                                        <br />

                                    </div>

                                    <table ng-show="PermissionsList.length > 0" id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 69px;" aria-sort="ascending" aria-label="First name: activate to sort column descending">Full Name</th>
                                                <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 67px;" aria-label="Last name: activate to sort column ascending">Menu Name</th>
                                                <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 152px;" aria-label="Position: activate to sort column ascending">IsView</th>
                                                <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 26px;" aria-label="Age: activate to sort column ascending">IsCreate</th>
                                                <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 62px;" aria-label="Start date: activate to sort column ascending">Is Delete</th>
                                                <th class="sorting" tabindex="0" aria-controls="datatable-responsive" rowspan="1" colspan="1" style="width: 44px;" aria-label="Salary: activate to sort column ascending">Is Modify</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr role="row" class="odd" ng-repeat="permission in PermissionsList">

                                                <td>{{permission.fullName}}</td>
                                                <td>{{permission.menuName}}</td>
                                                <td><input type="checkbox" ng-model="permission.isView" /></td>
                                                <td><input type="checkbox" ng-model="permission.isCreate" /></td>
                                                <td><input type="checkbox" ng-model="permission.isDelete" /></td>
                                                <td><input type="checkbox" ng-model="permission.isModify" /></td>


                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="btn-group" ng-show="PermissionsList.length > 0">
                                        <button type="button" ng-click="UpdatePermissions(PermissionsList)" class="btn btn-primary" value="Update" aria-label="Update">Update</button>
                                    </div>
                                    <div class="x_content" ng-hide="PermissionsList.length > 0">
                                        <h5 class="text-center">No Records To Dispaly.!</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div id="loading">
        <div class="col-md-12 col-sm-12 col-xs-12 text-center">
            <img src="~/Content/Template/Images/loading_128.gif" class="margin-top-17p" />
        </div>
    </div>
</div>


