
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap -->
    <link href="~/Content/Template/Css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/Template/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Content/Template/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Content/Template/vendors/animate.css/animate.min.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="~/Content/Template/Css/custom.min.css" rel="stylesheet" />
    <link href="~/Content/Template/Css/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/Template/Css/blue.css" rel="stylesheet" />

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/Service/LcService.js"></script>
    <script src="~/Scripts/Validations/Common/CommonValidation.js"></script>
    <script src="~/Scripts/Controller/Common/CommonController.js"></script>


</head>

<body class="login hold-transition login-page" ng-app="LC">
    <div class="login-box" ng-controller="ForgotPasswordController" ng-cloak>
        <div class="login-logo">
            <a><b>Admin</b>LC</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Please Enter Your Email Id</p>
            <div class="alert alert-success alert-dismissible fade in" role="alert" ng-show="process.isSuccessMsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                {{process.SuccessMsg}}
            </div>

            <div class="alert alert-danger alert-dismissible fade in" role="alert" ng-show="process.isErrorMsg">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                {{process.ErrorMsg}}
            </div>
            <div class="form-group has-feedback">
                <input type="email" id="emailAddress" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="row">

                <!-- /.col -->
                <div class="col-xs-4" ng-hide="process.isloading">
                    <div type="submit" ng-click="CheckEmail()" class="btn btn-primary btn-block btn-flat">Submit</div>
                </div>

                <div class="col-xs-4 text-center" ng-show="process.isloading">
                    <img src="~/Content/Template/Images/Loading_32.gif" />
                </div>
                <!-- /.col -->
            </div>

            <br />
            <br />
        </div>
        <!-- /.login-box-body -->
    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Content/Template/Js/bootstrap.min.js"></script>

</body>
</html>

